# Logging configuration
# 50 CRITICAL
# 40 ERROR
# 30 WARNING
# 20 INFO
# 10 DEBUG
# 0  NOTSET
server.logging_level = "10"
#server.logging_filename = "/var/log/server.log"
server.logging_format = "%(asctime)s %(levelname)-7s [%(name)16s] %(message)s"

server.socket_host = "0.0.0.0"
server.socket_port = "9090"

server.handlers = "examples", "tests"
# server.handlers = "redmine", "github", "trac", "phpbb", "qa2", "jenkins", "travis", "trello", "mailman"

# Tornado Web debugging
# debug = "yes"

# Don't actually do anything
# dry-run = "yes"

# Redmine API settings
redmine.url = ""
redmine.auth_key = ""
redmine.status.on-pr-opened = 2
redmine.status.on-pr-reopened = 2
redmine.status.on-pr-synchronize = 2
redmine.status.on-pr-closed = 2
redmine.status.on-pr-merged = 3

# Jenkins API settings
jenkins.url = ""
jenkins.username = ""
jenkins.password = ""

# Git API settings
git.token = ""

# Git users to Redmine users mappings
user.mapping.git-username = "redmine-username"

# Git repository to Jenkins job mappings
# repository.mapping.git-user/git-repo:ref-name = "foo-job-1", "foo-job-2"
repository.mapping.git-user/git-repo = "jenkins-job-1", "jenkins-job-2"
